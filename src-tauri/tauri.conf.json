{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "workout_stopwatch",
  "version": "0.1.0",
  "identifier": "com.interval-stopwatch.dev",
  "build": {
    "frontendDist": "../app_dist",
    "devUrl": "http://localhost:1234",
    "beforeDevCommand": "npx parcel src/index.html",
    "beforeBuildCommand": "npx parcel build --dist-dir=app_dist --public-url=/ --no-optimize src/index.html"
  },
  "app": {
    "windows": [
      {
        "title": "workout_stopwatch",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
